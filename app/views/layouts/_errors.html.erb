<% flash.each do |type, msg| %>
<div class='alert alert-<%= type %>'><%= msg %></div>
<% end %>

<% if current_user %>
  <% if current_user.errors.any? %>
  <div class='alert alert-danger'>
    <ul>
      <% current_user.errors.full_messages.each do |error| %>
      <li><%= error %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
<% end %>