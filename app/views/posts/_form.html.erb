  <div class="new-post">
    <%= render partial: 'posts/post_author', locals: { post: @post } %>
    <%= form_for @post do |f| %>
    <div class="form-group">
      <%= f.text_area :content, placeholder: "What's happening in space?", class: "form-control input-lg" %>
    </div>

    <div class="form-group">
      <%= f.file_field :image_url, placeholder: "Image link", class: "form-control input-lg" %>
    </div>

    <div class="form-group">
      <%= f.text_field :video_url, placeholder: "Video link", class: "form-control input-lg" %>
    </div>
    
    <div class="form-group">
      <%= f.fields_for :space_tag do |tag| %>
      <%= tag.text_field :polar, placeholder: "Polar", class: "input-lg col-xs-2 small-input", step: "any" %>
      <%= tag.text_field :azimuth, placeholder: "Azim", class: "input-lg col-xs-2 small-input", step: "any" %>
      <%= tag.text_field :radius, placeholder: "Radius", class: "input-lg col-xs-2 small-input", step: "any" %>
      <%= tag.select(:relational_body, relationalBodies, { prompt: "Orbiting" }, { class: "input-lg col-xs-3" }) %>
      <%= tag.select(:units, unitsOfDistance, { prompt: "Radius Units" }, { class: "input-lg col-xs-3" }) %>
      <% end %>
    </div>
      <%= f.submit :post, class: "btn btn-default btn-lg lower" %>
    <% end %>
    <div class="media-preview"></div>
  </div>
